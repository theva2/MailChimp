<?xml version="1.0"?>
  <config>
    
     <modules>
        <np6_mailPerformance>
          <version>1.0.0</version>
        </np6_mailPerformance>
     </modules>


     <frontend>
       <routers>
          <routeurfrontend>
              <use>standard</use>
              <args>
                 <module>np6_mailPerformance</module>
                 <frontName>mailPerformance</frontName>
              </args>
           </routeurfrontend>
       </routers>
       <layout>
          <updates>
            <mailPerformance>
             <file>mailPerformance.xml</file>
            </mailPerformance>
          </updates>
        </layout>
    </frontend>




    <admin>
     <routers>
         <mailPerformance>
            <use>admin</use>
            <args>
               <module>np6_mailPerformance</module>
               <frontName>adminMP</frontName>
            </args>
         </mailPerformance>
      </routers>
    </admin>
    <adminhtml>
      <acl>
        <resources>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <mailPerformance_authentification_section translate="title">
                                        <title>Authentification</title>
                                        <sort_order>200</sort_order>
                                    </mailPerformance_authentification_section>
                                     </children>
                            </config>
                        </children>
                    </system>
                 </children>
            </admin>
        </resources>
      </acl>

      <acl>
        <resources>
          <admin>
                <children>
                  <system>
                    <children>
                      <config>
                        <children>
                          <mailPerformance_dataBinding_section translate="title">
                            <title>Data binding</title>
                            <sort_order>300</sort_order>
                          </mailPerformance_dataBinding_section>
                        </children>
                      </config>
                    </children>
                  </system>
                </children>
              </admin>
        </resources>
      </acl>

      <layout>
            <updates>
              <mailPerformance>
               <file>mailPerformance.xml</file>
              </mailPerformance>
            </updates>
      </layout>

     <menu>
        <mailPerformance translate="title" module="adminhtml">
           <title>MailPerformance</title>
           <sort_order>100</sort_order>
           <children>
               <set_time>
                     <title>test</title>
                     <action>adminMP/adminhtml_index</action>
                </set_time>
            </children>
         </mailPerformance>
      </menu>

    </adminhtml>


    <global>
       <blocks>
           <mailPerformance>
                <class>np6_mailPerformance_Block</class>
           </mailPerformance>
        </blocks>

        <models>
          <mailPerformance>
               <class>np6_mailPerformance_Model</class>
               <resourceModel>mailPerformance_mysql4</resourceModel>
           </mailPerformance>
          <mailPerformance_mysql4>
               <class>np6_mailPerformance_Model_Mysql4</class>
               <entities>
                   <mailPerformance>
                     <table>np6_mailPerformance</table>
                   </mailPerformance>
                </entities>
          </mailPerformance_mysql4>
          </models>

          <events>
            <adminhtml_init_system_config>
                <observers>
                    <np6_init_system_config>
                        <class>np6_mailPerformance_model_observer</class>
                        <method>changeSystemConfig</method>
                    </np6_init_system_config>
                </observers>
            </adminhtml_init_system_config>
        </events>


              <!-- permet au module de lire et ecrire -->
          <resources>
                  <!-- connection pour ecrire -->
                  <mailPerformance_write>
                      <connection>
                          <use>core_write</use>
                      </connection>
                  </mailPerformance_write>
                  <!-- connection pour lire-->
                 <mailPerformance_read>
                    <connection>
                       <use>core_read</use>
                    </connection>
                 </mailPerformance_read>
          </resources>
          <!-- -/- -->

    </global>

</config>