<?xml version="1.0" ?>
<config>
    <tabs>
        <mailPerformance_tab translate="">
            <label>mailPerformance</label>
            <sort_order>100</sort_order>
        </mailPerformance_tab>
    </tabs>

    <sections>
         <!--  Authentification   -->
        <mailPerformance_authentification_section translate="">
            <label>Authentification</label>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <tab>mailPerformance_tab</tab>
            <groups>
                <mailPerformance_group translate="">
                    <label>Authentification</label>
                    <comment></comment>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <apikey_field translate="">
                            <label>Authentification key</label>
                            <comment>API Authentification key</comment>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_input>text</frontend_input>
                        </apikey_field>
                        <acount_detail_field translate="">
                            <label>Account details</label>
                            <frontend_model>mailPerformance/adminhtml_system_config_account</frontend_model>
                            <source_model>mailPerformance/system_config_source_account</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>1</show_in_store>
                        </acount_detail_field>
                    </fields>
                </mailPerformance_group>
            </groups>
        </mailPerformance_authentification_section>



        <!--  Data Binding  -->
         <mailPerformance_dataBinding_section translate="">
            <label>Data binding</label>
            <sort_order>300</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <tab>mailPerformance_tab</tab>
             <groups>
                <DataBinding_group translate="">
                    <label>Link Magento to MailPerformance</label>
                    <comment></comment>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <id_custormer_field translate="">
                            <label>Id</label>
                            <frontend_type>select</frontend_type>
                            <source_model>mailPerformance/system_config_source_numeric</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>1</show_in_store>
                        </id_custormer_field>
                        <gender_field translate="">
                            <label>Gender</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>1</show_in_store>
                        </gender_field>
                        <gender_mr_field translate="">
                            <label>Gender</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>1</show_in_store>
                        </gender_mr_field>
                        <gender_mdm_field translate="">
                            <label>Gender</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>1</show_in_store>
                        </gender_mdm_field>
                    </fields>
                </DataBinding_group>
            </groups>
        </mailPerformance_dataBinding_section>


    </sections>
</config>

